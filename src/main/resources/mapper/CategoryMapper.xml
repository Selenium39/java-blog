<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wantao.mapper.CategoryMapper">
	 <select id="selectAllCategory" resultType="com.wantao.bean.Category">
	   select * from category 
	 </select>
	 <select id="selectCategoryById" resultType="com.wantao.bean.Category">
	select * from category where category_id=#{categoryId}
	</select>
	 <delete id="deleteCategoryByBatchById">
	  delete from category where category_id in
	  <foreach collection="list" item="id" separator="," open="(" close=")">
	      #{id}
	  </foreach>
	</delete>
</mapper>