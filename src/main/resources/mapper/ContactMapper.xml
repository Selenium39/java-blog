<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wantao.mapper.ContactMapper">
	<insert id="addContact" parameterType="com.wantao.bean.Contact">
		insert into contact(name,email,phone,message,send_time,send_ip)
		values(#{name},#{email},#{phone},#{message},#{sendTime},#{sendIp})
	</insert>
	 <select id="selectAllContact" resultType="com.wantao.bean.Contact">
     select * from contact
  </select>
    <delete id="deleteContactByBatchById">
	  delete from contact where id in
	  <foreach collection="list" item="id" separator="," open="(" close=")">
	      #{id}
	  </foreach>
	</delete>
</mapper>